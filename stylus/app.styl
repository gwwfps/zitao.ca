@import 'nib'

dark = #0f1a2d
light = #f1fafa
tk-badge-bg = #cccccc

body
  background light
  color dark

a
  color lighten(dark, 30%)
  text-decoration none
  &:hover
    color lighten(dark, 50%)

text-shadow(color)
  text-shadow 0 1px 3px color, 0 -1px 3px color, 1px 0 3px color, -1px 0 3px color

.navigation
  background-color dark 
  position fixed
  right 0
  height 100%
  ul
    list-style none
    padding-left: 1em
    li 
      margin-top 1em
      a
        color light
        font-size 1.2em
        font-weight bold
        text-align center
        text-decoration none
        &:hover
          text-shadow(rgba(255, 255, 255, 0.5))
  &::after
    content ''
    display block
    background tk-badge-bg
    height 25px
    width 12.5%
    position fixed
    right 0
    bottom 0

.content
  padding 1em 2em

.post
  .post-title
    margin-bottom 0.2em
    a
      color dark
      &:hover
        color dark
        &::after
          margin-left 0.5em
          color desaturate(lighten(dark, 70%), 80%)
          font-size 0.7em
          content '\F02E'
          font-family 'FontAwesome'
  .post-time
    font-size 0.8em
    color desaturate(lighten(dark, 50%), 50%)
    margin-bottom 0.3em
  hr
    height 1px
    border 0
    background linear-gradient(left, light, desaturate(lighten(dark, 80%), 30%), light)
    margin 2em
